<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">Filter example</div>
        <div class="panel-body">
            <div class="col-lg-3 col-md-4 col-xs-6" ng-repeat="number in numbers">
                <div><span>Number : {{number}}</span></div>
                <div><span>Power : {{number | mathPower}}</span></div>
                <div><span style="font-size:16px;">{{number | mathPowerBase}}</span><span style="font-size:8px; vertical-align:top">{{number | mathPowerExponent}}</span></div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Photo Gallery</h1>
                </div>
                <div class="col-lg-12">
                    <div class="col-lg-6 pull-left">
                        <div class="col-lg-4 col-md-4 col-xs-6">
                            <span class="margin-5">Page size</span>
                            <select class="dropdown" ng-model="pageSize" ng-init="pageSize = 25">
                                <option ng-selected="pageSize == 10" value="10">10</option>
                                <option ng-selected="pageSize == 25" value="25">25</option>
                                <option ng-selected="pageSize == 50" value="50">50</option>
                                <option ng-selected="pageSize == 100" value="100">100</option>
                                <option ng-selected="pageSize == 500" value="500">500</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6 pull-right">
                        <div class="col-lg-6 col-md-8 col-xs-12 pull-right">
                           
                            <button class="btn btn-primary btn-sm pull-right" ng-disabled="currentPage >= PhotoService.allItems.length/pageSize - 1" ng-click="currentPage=currentPage+1">
                                Next
                            </button>
                            <span class="pull-right margin-5" >{{currentPage+1}}/{{pages()}}</span>  
                            
                            <button class="btn btn-primary btn-sm pull-right" ng-disabled="currentPage == 0" ng-click="currentPage=currentPage-1">
                                Previous
                            </button>

                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="image-item col-lg-3 col-md-4 col-xs-6" ng-repeat="image in PhotoService.allItems |startFrom:currentPage*pageSize| limitTo:pageSize">
                    <photo-app-image item="image"></photo-app-image>
                </div>
            </div>
        </div>
    </div>
</div>





